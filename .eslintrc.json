{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parser":"babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
       "experimentalObjectRestSpread": true
    }
  },
  "extends": "koa",
  "rules": {
    "no-console": "off",
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
